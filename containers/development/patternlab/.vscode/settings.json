{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.hbs$",
                "cmd": "npm run pl:build"
            },
            {
                "match": "\\.json$",
                "cmd": "npm run pl:build"
            },
            {
                "match": "\\.scss$",
                "cmd": "npm run pl:build"
            }
        ]
    },
    "files.exclude": {
        "**/.config": true,
        "**/.npm": true,
        "**/.vscode-server": true,
        "**/.screenrc": true,
        "**/.watch": true,
        "**/dependencyGraph.json": true,
        "**/package-lock.json": true
    },
    "files.watcherExclude": {
        "**/.cache/**": true,
        "**/.config/**": true,
        "**/.npm/**": true,
        "**/.vscode/**": true,
        "**/.vscode-server/**": true,
        "**/node_modules/**": true,
        "**/app/pattern_exports/**": true,
        "**/app/public/**": true
    }
}