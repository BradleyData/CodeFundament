{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "mutator": "typescript",
  "packageManager": "npm",
  "reporters": [
    "clear-text",
    "html",
    "progress"
  ],
  "htmlReporter": {
      "baseDir": "app/output/mutation"
  },
  "testRunner": "jest",
  "transpilers": [
    "typescript"
  ],
  "coverageAnalysis": "off",
  "tsconfigFile": "tsconfig.json",
  "files": [
    "app/src/**/*.ts"
  ],
  "mutate": [
    "app/src/**/*.ts",
    "!app/src/**/*.test.ts",
    "!app/src/index.ts"
  ],
  "thresholds": {
      "high": 100,
      "low": 100,
      "break": 100
  }
}
