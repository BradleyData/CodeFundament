{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.ts$",
                "cmd": "touch -m .watch"
            }
        ]
    },
    "files.exclude": {
        "**/.config": true,
        "**/.npm": true,
        "**/.vscode-server": true,
        "**/.bash_logout": true,
        "**/.bashrc": true,
        "**/.profile": true,
        "**/.screenrc": true,
        "**/.watch": true,
        "**/package-lock.json": true
    },
    "files.watcherExclude": {
        "**/.cache/**": true,
        "**/.config/**": true,
        "**/.npm/**": true,
        "**/.vscode/**": true,
        "**/.vscode-server/**": true,
        "**/node_modules/**": true,
        "**/app/output/**": true
    }
}
