{
  "$schema": "/home/node/node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "checkers": ["typescript"],
  "reporters": [
    "clear-text",
    "html",
    "progress"
  ],
  "htmlReporter": {
      "baseDir": "/home/node/app/output/mutation"
  },
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "tsconfigFile": "/home/node/config/tsconfig.json",
  "files": [
    "app/src/**/*.ts"
  ],
  "mutate": [
    "app/src/**/*.ts",
    "!app/src/**/*.test.ts",
    "!app/src/index.ts",
    "!app/src/TestHelper.ts",
    "!app/src/wrapper/**/*.ts"
  ],
  "thresholds": {
      "high": 100,
      "low": 100,
      "break": 100
  },
  "buildCommand_comment": "Copy the config files to the temp directory so Stryker can find them.",
  "buildCommand": "cp -t . /home/node/config/shared/babel.config.json /home/node/config/jest.config.js /home/node/config/tsconfig.json",
  "disableTypeChecks_comment": "Tell Stryker to look under the app/src/ directory for our files.",
  "disableTypeChecks": "app/src/**/*.{js,ts,jsx,tsx,html,vue}"
}
