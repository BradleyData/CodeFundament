{
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.watcherExclude": {
        "**/**": true
    },
    "git.branchValidationRegex": "^([A-Za-z0-9]+\/)?[Ii]ssue[1-9][0-9]*$",
    "git.enableCommitSigning": true,
    "git.inputValidationSubjectLength": 50,
    "git.inputValidationLength": 72,
    "git.inputValidation": "always",
    "githubIssues.workingIssueBranch": "issue${issueNumber}",
    "githubIssues.workingIssueFormatScm": "${issueTitle}",
}